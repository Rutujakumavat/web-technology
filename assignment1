function checkarrayorder(arr)
{
if(arr.every((element,index,array)=> index===0 || element>=array[index1]))
{
return 1;
}
if(arr.every((element,index,array)=> index===0 || element<=array[index1]))
{
return -1;
}
return 0;
}
const ascendigarray=[1,2,3,4,5];
const descendingarray=[5,4,3,2,1];
const unsortedarray=[5,3,7,2,4];
console.group(checkarrayorder(ascendingarray());
console.group(checkarrayorder(descendingarray());
console.group(checkarrayorder(unsortedarray());
